<% layout("/layouts/boilerPlate") %>
  <div class="row"> 
     <div class="col-lg-6 offset-lg-3">
<h1 class="mt-3 mb-2 new-h2" >Edit your List</h1>
    <form action="/listing/<%=lt._id%>/edit?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-1">
            <label for="title"  class="form-label">Title:</label>
            <input type="text" id="title" name="title" value="<%=lt.title%>" required class="form-control">
        </div>
        <div class="mb-1">
            <label for="description"  class="form-label">Description:</label>
            <textarea id="description" name="description"  required class="form-control"><%=lt.description%></textarea >
        </div>
        <div class="mb-1">
            <label for="image"  class="form-label">Upload Image:</label>
            <input type="file" id="image" name="image"  class="form-control" >
            <p style="font-size: 10px; color: red;">File size must be less than 10mb</p>
        </div>
        <div class="mb-1">
            <label for="image"  class="form-label">price</label>
            <input type="number" id="image" name="price" value="<%=lt.price%>" class="form-control" required>
        </div>
        <div class="mb-1">
            <label for="location"  class="form-label">Location:</label>
            <input type="text" id="location" name="location" value="<%=lt.location%>" class="form-control" required>
        </div>
        <div class="mb-1">
            <label for="country"  class="form-label">Country:</label>
            <input type="text" id="country" name="country" value="<%=lt.country%>" class="form-control" required>
        </div>
        <div class="mb-3 mt-3">
            <button type="submit" class="btn new-btn">Done</button>
        </div>
    </form>
</div>
</div>   
</body>
</html>